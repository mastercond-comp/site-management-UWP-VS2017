            <AppBarButton Icon="Save" Label="Сохранить *.tovar"   FontSize="35" Foreground="Purple" FontWeight="Bold" Background="White" Click="SaveFileTovar_Click"/>
            <AppBarButton Icon="SaveLocal" Label="Сохранить *.php"   FontSize="35" Foreground="Purple" FontWeight="Bold" Background="White" Click="SaveFileTovarPHP_Click"/>
        </CommandBar>
    </Page.BottomAppBar>

